# Supabase PostgreSQL 
SUPABASE_DB_URL=
SUPABASE_PASSWORD=

# Airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__LOGGING__LOGGING_LEVEL=INFO

# 環境設置
ENVIRONMENT=local
DEBUG=True

# MONGODB ATLAS
MONGODB_ATLAS_URL=
MONGODB_USERNAME=
MONGODB_PASSWORD=

# Spotify API
SPOTIFY_REFRESH_TOKEN=
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
REDIRECT_URI=

# ============================================================================
# Setup Instructions
# ============================================================================

# 1. Spotify API setting:
#    - https://developer.spotify.com/dashboard
#    - Create App
#    - Copy Client ID and Client Secret
#    - REFRESH_TOKEN is optional and used for user authorization features

# 2. Supabase setting:
#    - Go to your Supabase project settings
#    - Find Database URL
#    - Replace the password part with your database password

# 3. MongoDB Atlas setting:
#    - Go to MongoDB Atlas console
#    - Get the connection string
#    - It is recommended to use music_data as the database name

# 4. Airflow setting:
#    - Run make generate-fernet to generate FERNET_KEY
#    - SECRET_KEY can be any 32-character string